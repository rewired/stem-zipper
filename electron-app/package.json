{
  "name": "stem-zipper-electron",
  "version": "0.9.0",
  "description": "Electron client for Stem ZIPper using TypeScript, React, Vite, and Tailwind CSS.",
  "private": true,
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:main\"",
    "dev:renderer": "vite --config vite.renderer.config.ts",
    "dev:main": "npm-run-all --parallel watch:main watch:preload start:electron",
    "start:electron": "wait-on tcp:5173 && electron . --dev",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "watch:preload": "tsc -p tsconfig.preload.json --watch",
    "build": "npm-run-all build:main build:preload build:renderer",
    "build:renderer": "vite build --config vite.renderer.config.ts",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "preview": "electron .",
    "package": "npm run build && electron-builder"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "archiver": "^6.0.1",
    "electron": "^28.2.2",
    "fs-extra": "^11.2.0",
    "i18next": "^23.7.16",
    "minimist": "^1.2.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.5.0",
    "wav-decoder": "^1.3.0",
    "wav-encoder": "^1.3.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.33",
    "@types/react-dom": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.rewired.stemzipper",
    "productName": "Stem ZIPper",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist/main/index.js"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.music"
    },
    "win": {
      "target": ["nsis", "zip"]
    },
    "linux": {
      "target": ["AppImage", "tar.gz"],
      "category": "AudioVideo"
    }
  }
}
