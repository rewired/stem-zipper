{
  "name": "stem-zipper-electron",
  "version": "0.1.0",
  "description": "Electron desktop app for preparing ccMixter-ready stem ZIP archives.",
  "author": "Bj√∂rn Ahlers",
  "private": true,
  "main": "dist-electron/main/electron/main.js",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "clean": "node scripts/clean-output.cjs",
    "dev": "concurrently -k \"pnpm:dev:main\" \"pnpm:dev:preload\" \"pnpm:dev:renderer\" \"pnpm:electron\"",
    "dev:renderer": "vite",
    "dev:main": "tsc --watch --project electron/tsconfig.main.json",
    "dev:preload": "tsc --watch --project electron/tsconfig.preload.json",
    "electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 node scripts/launch-electron.cjs .",
    "build": "pnpm run build:renderer && pnpm run build:main && pnpm run build:preload",
    "package:win": "pnpm run clean && pnpm run build && electron-builder --win --x64",
    "build:renderer": "vite build",
    "build:main": "tsc --project electron/tsconfig.main.json",
    "build:preload": "tsc --project electron/tsconfig.preload.json",
    "lint": "eslint \"{src,electron}/**/*.{ts,tsx}\"",
    "preview": "pnpm run build && electron .",
    "test": "vitest run"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "wavefile": "^11.0.0",
    "yazl": "^2.5.1"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.41",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "24.13.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.4.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "org.ccmixter.stemzipper",
    "productName": "Stem ZIPper",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "dist-renderer/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist-electron/main/electron/main.js"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "packageManager": "pnpm@10.13.1"
}
