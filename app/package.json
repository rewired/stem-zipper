{
  "name": "stem-zipper-electron",
  "version": "1.0.0",
  "description": "Electron desktop app for preparing ccMixter-ready stem ZIP archives.",
  "author": "Bj√∂rn Ahlers",
  "private": true,
  "main": "dist-electron/main/electron/main.js",
  "license": "MIT",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "clean": "node scripts/clean-output.cjs",
    "dev": "node scripts/dev.cjs",
    "dev:start": "concurrently -k \"pnpm:dev:main\" \"pnpm:dev:preload\" \"pnpm:dev:renderer\" \"pnpm:electron\"",
    "dev:renderer": "vite",
    "dev:main": "tsc --watch --project electron/tsconfig.main.json",
    "dev:preload": "tsc --watch --project electron/tsconfig.preload.json",
    "electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 node scripts/launch-electron.cjs .",
    "build": "pnpm run build:renderer && pnpm run build:main && pnpm run build:preload",
    "package:win": "pnpm run clean && pnpm run build && electron-builder --win --x64 --publish never",
    "package:linux": "pnpm run clean && pnpm run build && electron-builder --linux AppImage --x64 --publish never",
    "build:renderer": "vite build",
    "build:main": "tsc --project electron/tsconfig.main.json",
    "build:preload": "tsc --project electron/tsconfig.preload.json",
    "lint": "eslint \"{src,electron}/**/*.{ts,tsx}\"",
    "preview": "pnpm run build && electron .",
    "test": "vitest run",
    "licenses:txt": "pnpm dlx license-checker-rseidelsohn --production --relativeLicensePath --out THIRD_PARTY_LICENSES.txt",
    "licenses:guard": "pnpm dlx license-checker-rseidelsohn --production --onlyAllow='MIT;BSD-2-Clause;BSD-3-Clause;Apache-2.0;ISC;CC0-1.0'",
    "notices:collect": "node scripts/collect-notices.mjs",
    "prepack": "pnpm run licenses:txt && pnpm run notices:collect"
  },
  "dependencies": {
    "buffer-crc32": "^1.0.0",
    "clsx": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "wavefile": "^11.0.0",
    "yazl": "^2.5.1"
  },
  "devDependencies": {
    "@material-symbols/svg-400": "^0.38.0",
    "@tailwindcss/forms": "^0.5.7",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.41",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "24.13.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.4.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "rewired.stemzipper",
    "productName": "Stem ZIPper",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "dist-renderer/**/*",
      "package.json",
      {
        "from": "node_modules/.pnpm/buffer-crc32@0.2.13/node_modules/buffer-crc32",
        "to": "node_modules/buffer-crc32",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/.pnpm/clsx@2.1.1/node_modules/clsx",
        "to": "node_modules/clsx",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/.pnpm/js-tokens@4.0.0/node_modules/js-tokens",
        "to": "node_modules/js-tokens",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/.pnpm/loose-envify@1.4.0/node_modules/loose-envify",
        "to": "node_modules/loose-envify",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/.pnpm/react-dom@18.3.1_react@18.3.1/node_modules/react-dom",
        "to": "node_modules/react-dom",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/.pnpm/react@18.3.1/node_modules/react",
        "to": "node_modules/react",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/.pnpm/scheduler@0.23.2/node_modules/scheduler",
        "to": "node_modules/scheduler",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/.pnpm/wavefile@11.0.0/node_modules/wavefile",
        "to": "node_modules/wavefile",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/.pnpm/yazl@2.5.1/node_modules/yazl",
        "to": "node_modules/yazl",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraMetadata": {
      "main": "dist-electron/main/electron/main.js"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "packageManager": "pnpm@10.19.0"
}
