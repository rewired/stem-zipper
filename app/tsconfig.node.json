{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist-electron",
    "composite": true,
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["./common/*"]
    }
  },
  "include": ["electron/**/*.ts", "types/**/*.d.ts", "common/**/*.ts"]
}
